#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a main.lua"

# if hello.txt has contents, display them (indented to align)
# otherwise error

if [ ! -s $1/main.lua ]; then
  echo "main.lua was empty"
  exit 1
else
  echo "Downloading turbo.lua self-contained pack" | indent
  PATH=$PATH:/sbin
  curl https://raw.github.com/enotodden/turbo-virtual-env/master/turbo-virtual-env | bash -s - --create $1/env
  cd $1/env/src/luarocks
  ./configure --with-lua=../src/luajit-2.0/src/luajit --with-lua-include=../luajit-2.0/src
  make build
  cd ..
  git clone https://github.com/kernelsauce/turbo.git
  make -C ./turbo install PREFIX=./
  cd turbo
  sed -i 's/\/usr\/local\/lib\/libtffi_wrap.so/\/app\/env\/turbo\/libtffi_wrap.so/g' turbo/httputil.lua
  sed -i 's/\/usr\/local\/lib\/libtffi_wrap.so/\/app\/env\/turbo\/libtffi_wrap.so/g' turbo/iostream.lua
fi | indent
